<% content_for :body_content_title, "<h1>#{@news_item.title}</h1>" %>
<% content_for :body_content_left do %>
  <p>
    <small><%= t('.published') %> <%= @news_item.publish_date.strftime("%A %d of %B, %Y") %></small>
  </p>
  <%= @news_item.body %>
  <p>
    <%= link_to t('.back_to_all_news'), news_items_url %>
  </p>
<% end %>
<% content_for :body_content_right, render(:partial => 'recent_posts') %>

<%= render :partial => "/shared/content_page" %>
